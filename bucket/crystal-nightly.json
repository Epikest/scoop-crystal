{
    "version": "1.2.2",
    "description" : "Crystal programming language nightly preview",
    "homepage": "https://crystal-lang.org/",
    "license": {
        "identifier": "Freeware",
        "url": "https://github.com/crystal-lang/crystal/blob/master/LICENSE"
    },
    "pre_install": [],
    "url": [
        "https://raw.githubusercontent.com/neatorobito/scoop-crystal/c8ea9aedc6d099ceaf339da5f9db17c190cc70f3/scripts/crystal.ps1",
        "https://raw.githubusercontent.com/neatorobito/scoop-crystal/c8ea9aedc6d099ceaf339da5f9db17c190cc70f3/scripts/grab_latest_nightly.ps1"
    ],
    "hash": [

    ],
    "depends": ["vswhere", "git", "7zip"],
    "env_add_path": ".",
    "env_set": {
        "LIB": "$dir\\lib",
        "CRYSTAL_PATH": "$dir;$dir\\crystal-lang\\src"
    },
    "bin": ["crystal.ps1", "grab_latest_nightly.ps1"],
    "post_install": [ 
        "powershell -File $dir\\grab_latest_nightly.ps1",
        "mv $dir\\lib\\crystal.exe $dir\\_crystal.exe",
        "If (Test-Path $env:LOCALAPPDATA\\crystal\\cache) { rm -r -fo $env:LOCALAPPDATA\\crystal\\cache}"
    ]
}
